<Application x:Class="NapierBankMessenger.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NapierBankMessenger"
             xmlns:viewModel="clr-namespace:NapierBankMessenger.MVVM.ViewModel"
             xmlns:view="clr-namespace:NapierBankMessenger.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/NavigationLinks.xaml"/>
                <ResourceDictionary Source="Style/SearchBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate DataType="{x:Type viewModel:BaseViewModel}">
                <view:HomePage/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
