<Application x:Class="NapierBankMessenger.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NapierBankMessenger"
             xmlns:viewModels="clr-namespace:NapierBankMessenger.MVVM.ViewModel"
             xmlns:views="clr-namespace:NapierBankMessenger.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <DataTemplate DataType="{x:Type viewModels:ViewModelController}">
                <views:HomePage />
            </DataTemplate>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/NavigationLinks.xaml"/>
                <ResourceDictionary Source="Style/SearchBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
